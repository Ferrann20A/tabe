@model List<RestauranteView>

@{
    List<CategoriaRestaurante> categorias = ViewData["CATEGORIAS"] as List<CategoriaRestaurante>;

}

<div class="sm:px-4 p-6">
    <form class="sm:px-6" method="post">
        <div class="flex flex-wrap">
            <label class="form-control w-full">
                <div class="flex flex-wrap justify-center">
                    @foreach (CategoriaRestaurante categoria in categorias)
                    {
                        <button class="w-20 text-sm" name="categoria" value="@categoria.Nombre">
                            <img src="~/images/categ_restaurantes/@categoria.IconoCategoria" />
                            <span>@categoria.Nombre</span>
                        </button>
                    }
                </div>
            </label>
        </div>
        <div class="w-full mt-6 lg:px-16">
            <label class="form-control w-full">
                <div class="label">
                    <span class="label-text font-bold">Valoración (más de)</span>
                </div>
                <div class="rating rating-lg">
                    <input type="radio" name="rating" class="mask mask-star-2 bg-violet-800" value="1" />
                    <input type="radio" name="rating" class="mask mask-star-2 bg-violet-800" checked value="2" />
                    <input type="radio" name="rating" class="mask mask-star-2 bg-violet-800" value="3" />
                    <input type="radio" name="rating" class="mask mask-star-2 bg-violet-800" value="4" />
                    <input type="radio" name="rating" class="mask mask-star-2 bg-violet-800" value="5" />
                </div>
            </label>
        </div>
    </form>

    @if (Model.Count() == 0)
    {
        <h1 class="text-center mt-10 text-2xl">Restaurantes no encontrados</h1>
    }
    <div class="flex flex-wrap lg:px-16">
        @foreach (RestauranteView rest in Model)
        {
            <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
                <a asp-controller="Restaurantes" asp-action="Productos" asp-route-id="@rest.IdRestaurante">
                    <div class="card card-compact bg-base-100 shadow-xl mb-3">
                        <figure>
                            <img class="object-cover w-full h-40" src="~/images/imag_restaurantes/@rest.Imagen" />
                        </figure>
                        <div class="card-body">
                            <div class="flex flex-wrap">
                                <h2 class="xl:w-4/6 w-full card-title line-clamp-1 overflow-hidden">
                                    @rest.Nombre
                                </h2>
                                <div class="xl:w-2/6 w-full mt-1 badge badge-ghost bg-violet-200 text-violet-600 font-bold">@rest.CategoriaRestaurante</div>
                            </div>
                            <div class="flex">
                                <div class="w-1/2 text-gray-500">
                                    @rest.TiempoEntrega min
                                </div>
                                <div class="w-1/2">
                                    <div class="card-actions justify-end">
                                        @{
                                            int valoracion = (int)((decimal)rest.Valoracion / 5 * 100);
                                        }
                                        <div class="badge badge-outline">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 me-1">
                                                <path d="M2.09 15a1 1 0 0 0 1-1V8a1 1 0 1 0-2 0v6a1 1 0 0 0 1 1ZM5.765 13H4.09V8c.663 0 1.218-.466 1.556-1.037a4.02 4.02 0 0 1 1.358-1.377c.478-.292.907-.706.989-1.26V4.32a9.03 9.03 0 0 0 0-2.642c-.028-.194.048-.394.224-.479A2 2 0 0 1 11.09 3c0 .812-.08 1.605-.235 2.371a.521.521 0 0 0 .502.629h1.733c1.104 0 2.01.898 1.901 1.997a19.831 19.831 0 0 1-1.081 4.788c-.27.747-.998 1.215-1.793 1.215H9.414c-.215 0-.428-.035-.632-.103l-2.384-.794A2.002 2.002 0 0 0 5.765 13Z" />
                                            </svg>

                                            @valoracion%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

</div>
