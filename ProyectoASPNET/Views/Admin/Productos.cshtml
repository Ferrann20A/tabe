@model List<Producto>

<div role="tablist" class="tabs tabs-boxed w-11/12 mx-auto mt-2">
    <a asp-controller="Admin" asp-action="Restaurantes" role="tab" class="tab">Restaurantes</a>
    <a asp-controller="Admin" asp-action="Usuarios" role="tab" class="tab">Usuarios</a>
    <a asp-controller="Admin" asp-action="Productos" role="tab" class="tab tab-active">Productos</a>
</div>

<div class="sm:px-4 p-6">
    <div class="flex flex-wrap lg:px-16">
        <div class="flex flex-col w-full">
            <div class="-m-1.5 overflow-x-auto">
                <div class="p-1.5 min-w-full inline-block align-middle">
                    <div class="border rounded-lg shadow overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3"></th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Nombre</th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Precio</th>
                                    <th scope="col" class="px-6 py-3"></th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @foreach (Producto prod in Model)
                                {
                                    <tr>
                                        <td class="flex justify-center">
                                            <img src="~/images/imag_productos/@prod.Imagen" class="w-16 md:w-24 max-h-full rounded-3xl text-center px-0.5 py-1.5">
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@prod.Nombre</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@prod.Precio€</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-center font-medium space-x-2">
                                            <button type="button"
                                                    class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-green-600 hover:text-green-800 disabled:opacity-50 disabled:pointer-events-none">
                                                Detalles
                                            </button>
                                            <button type="button"
                                                    class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-blue-600 hover:text-blue-800 disabled:opacity-50 disabled:pointer-events-none">
                                                Editar
                                            </button>
                                            <button type="button"
                                                    class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-red-600 hover:text-red-800 disabled:opacity-50 disabled:pointer-events-none">
                                                Borrar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
