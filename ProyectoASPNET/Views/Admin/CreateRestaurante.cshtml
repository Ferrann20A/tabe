@model List<CategoriaRestaurante>

<div class="py-6 px-12 md:px-24">
    <h1 class="text-3xl font-bold text-gray-900 mt-2 mb-4">Crear nuevo restuarante</h1>
    <form method="post" class="mt-8 grid grid-cols-6 gap-6">
        @Html.AntiForgeryToken()
        <input type="hidden" name="idrestaurante" value="0" />
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Nombre</label>
            <input type="text" name="nombre" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Categoría</label>
            <select name="categoriarestaurante"
                    class="p-2 pb-1.5 mt-1.5 w-full rounded-lg border-gray-300 text-gray-700 sm:text-sm shadow-sm focus:ring focus:outline-none">
                @foreach (CategoriaRestaurante categ in Model)
                {
                    <option value="@categ.IdCategoriaRestaurante">@categ.Nombre</option>
                }
            </select>
        </div>
        <div class="col-span-6">
            <label class="block text-sm font-bold text-gray-700">Teléfono</label>
            <input type="tel" maxlength="9" name="telefono" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Dirección</label>
            <input type="text" name="direccion" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Imagen</label>
            <input type="text" name="imagen" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>

        <div class="col-span-6">
            <label class="block text-sm font-bold text-gray-700">Tiempo Entrega</label>
            <input type="number" name="tiempoentrega" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6">
            <button class="btn btn-primary font-medium w-full">
                Crear restaurante
            </button>
        </div>
    </form>
</div>