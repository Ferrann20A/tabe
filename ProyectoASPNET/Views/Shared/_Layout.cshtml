@{
    string baseUri = Context.Request.Scheme + "://" + Context.Request.Host;
    int idUsuario = Context.Session.GetObject<int>("USER");
    int tipoUsuario = Context.Session.GetObject<int>("TIPOUSER");
    int numCesta = 0;
    if (Context.Session.GetObject<List<ProductoCesta>>("CESTA") != null)
    {
        numCesta = Context.Session.GetObject<List<ProductoCesta>>("CESTA").Sum(p => p.Cantidad);
    }
}

<!doctype html>
<html data-theme="light">
<head>
    <link rel="stylesheet" href="~/css/output.css" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <link href="~/css/flowbite.css" rel="stylesheet" />
    <style>
        @@font-face {
            font-family: UberMove;
            src: url("@baseUri/fonts/UberMoveMedium.otf") format('opentype');
        }

        * {
            font-family: UberMove !important;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        textarea:-webkit-autofill,
        textarea:-webkit-autofill:hover,
        textarea:-webkit-autofill:focus,
        select:-webkit-autofill,
        select:-webkit-autofill:hover,
        select:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0px 1000px #ffffff inset !important;
        }

        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        /* For IE, Edge and Firefox */
        .scrollbar-hide {
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
        }
    </style>
    @RenderSection("styles", false)
</head>

<body>
    <div class="navbar bg-primary text-primary-content lg:px-12">
        <div class="navbar-start">
            <div class="flex lg:hidden">
                <div class="dropdown">
                    <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h8m-8 6h16" />
                        </svg>
                    </div>
                    <ul tabindex="0"
                        class="menu menu-sm dropdown-content mt-3 z-50 p-2 shadow bg-primary text-primary-content rounded-box w-52">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if (idUsuario != 0)
                        {
                            @if (tipoUsuario == 1)
                            {
                                <li>
                                <li>
                                    <a asp-controller="Restaurantes" asp-action="Index">
                                        Restaurantes
                                    </a>
                                </li>
                                </li>
                                <li>
                                    <a asp-controller="Cesta" asp-action="Index">
                                        Cesta
                                        @if (numCesta > 0)
                                        {
                                            <div class="absolute inline-flex items-center justify-center w-5 h-5 text-xs text-white top-[1px] end-28 badge badge-error bg-red-600">
                                                @numCesta
                                            </div>
                                        }
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Admin" asp-action="Index">Admin</a>
                                    <ul class="p-2">
                                        <li>
                                            <a asp-controller="Restaurantes" asp-action="Index">
                                                Restaurantes
                                            </a>
                                        </li>
                                        <li>
                                            <a>Productos</a>
                                        </li>
                                        <li>
                                            <a>Usuarios</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        <li>
                            <a>Usuario</a>
                            <ul class="p-2">
                                @if (idUsuario == 0)
                                {
                                    <li>
                                        <a asp-controller="Auth" asp-action="Login">
                                            Iniciar sesión
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Auth" asp-action="Register">
                                            Registrarse
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-controller="Usuario" asp-action="Perfil">
                                            Perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Usuario" asp-action="Pedidos">
                                            Pedidos
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Auth" asp-action="Logout">
                                            Cerrar sesión
                                        </a>
                                    </li>
                                }

                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-ghost">
                <span class="text-xl">Tabe</span>
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                @if (idUsuario != 0)
                {
                    @if (tipoUsuario == 1)
                    {
                        <li>
                            <a asp-controller="Restaurantes" asp-action="Index">
                                Restaurantes
                            </a>
                        </li>
                        <li>
                            <details>
                                <summary>Usuario</summary>
                                <ul class="p-2 bg-primary text-primary-content z-50 top-10">
                                    <li>
                                        <a asp-controller="Usuario" asp-action="Perfil">
                                            Perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Usuario" asp-action="Pedidos">
                                            Pedidos
                                        </a>
                                    </li>
                                </ul>
                            </details>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Admin" asp-action="Usuarios">Panel Admin</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="navbar-end hidden lg:flex">
            @if (idUsuario == 0)
            {
                <div class="join">
                    <a asp-controller="Auth" asp-action="Login" class="btn font-medium join-item">
                        Iniciar sesión
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn font-medium join-item">
                        Registrarse
                    </a>
                </div>
            }
            else
            {
                <a asp-controller="Cesta" asp-action="Index"
                   class="btn btn-ghost btn-circle me-5">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
                        <path d="M1.75 1.002a.75.75 0 1 0 0 1.5h1.835l1.24 5.113A3.752 3.752 0 0 0 2 11.25c0 .414.336.75.75.75h10.5a.75.75 0 0 0 0-1.5H3.628A2.25 2.25 0 0 1 5.75 9h6.5a.75.75 0 0 0 .73-.578l.846-3.595a.75.75 0 0 0-.578-.906 44.118 44.118 0 0 0-7.996-.91l-.348-1.436a.75.75 0 0 0-.73-.573H1.75ZM5 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0ZM13 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0Z" />
                    </svg>
                    @if (numCesta > 0)
                    {
                        <div class="w-5 h-5 text-xs text-white badge badge-error bg-red-600">@numCesta</div>
                    }
                </a>
                <a asp-controller="Auth" asp-action="Logout" class="btn font-medium join-item">
                    Cerrar sesión
                </a>
            }
        </div>
    </div>

    <div class="container mx-auto max-w-full">
        @RenderBody()
    </div>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/datepicker.min.js"></script>
    <script src="~/js/flowbite.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    @await RenderSectionAsync("scripts", false)
</body>

</html>