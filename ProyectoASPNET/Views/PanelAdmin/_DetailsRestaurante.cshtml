@model RestauranteView

<div class="py-6 px-8">
    <form class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-span-1">
            <label class="block text-sm font-bold text-gray-700">ID</label>
            <input type="text" readonly value="@Model.IdRestaurante" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Nombre</label>
            <input type="text" readonly value="@Model.Nombre" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-2">
            <label class="block text-sm font-bold text-gray-700">Categoría</label>
            <input type="text" readonly value="@Model.CategoriaRestaurante" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6">
            <label class="block text-sm font-bold text-gray-700">Dirección</label>
            <input type="text" readonly value="@Model.Direccion" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Teléfono</label>
            <input type="tel" readonly value="@Model.Telefono" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label class="block text-sm font-bold text-gray-700">Valoración</label>
            @{
                string valoracion = Model.Valoracion + "/5";
            }
            <input type="text" readonly value="@valoracion" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6">
            <label class="block text-sm font-bold text-gray-700">Correo</label>
            <input type="text" readonly value="@Model.Correo" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
        </div>
        <div class="col-span-6">
            <img class="object-cover w-full h-[294px] rounded-xl" src="~/images/imag_restaurantes/@Model.Imagen" />
        </div>
    </form>
</div>
