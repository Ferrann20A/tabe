@model List<Usuario>

<div class="sm:px-4 p-6">
    <div class="flex flex-wrap lg:px-16">
        <div class="flex flex-col w-full">
            <div class="-m-1.5 overflow-x-auto">
                <div class="p-1.5 min-w-full inline-block align-middle">
                    <div class="border rounded-lg shadow overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Nombre</th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Correo</th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Teléfono</th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Dirección</th>
                                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Tipo Usuario</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @foreach (Usuario usuario in Model)
                                {
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">@usuario.Nombre</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@usuario.Correo</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@usuario.Telefono</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@usuario.Direccion</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                            @{
                                                if (usuario.TipoUsuario == 1)
                                                {
                                                    <span>Usuario</span>
                                                }
                                                else if (usuario.TipoUsuario == 2)
                                                {
                                                    <span>Admin</span>
                                                }
                                                else if (usuario.TipoUsuario == 3)
                                                {
                                                  <span>Empresa</span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
