@model List<CategoriaRestaurante>

@using (Html.BeginForm("_CreateRestaurante", "PanelAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="px-8 py-6">
        <div class="grid-cols-6 grid gap-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idrestaurante" value="0" />
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Nombre</label>
                    <input required type="text" name="nombre" class="border-gray-200 bg-white text-gray-700 mt-1 w-full rounded-md text-sm shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Categoría</label>
                    <select name="categoriarestaurante"
                            class="border-gray-300 text-gray-700 mt-1.5 w-full rounded-lg p-2 pb-1.5 shadow-sm focus:ring focus:outline-none sm:text-sm">
                        @foreach (CategoriaRestaurante categ in Model)
                        {
                            <option value="@categ.IdCategoriaRestaurante">@categ.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-span-6">
                    <label class="text-gray-700 block text-sm font-bold">Teléfono</label>
                    <input required type="tel" maxlength="9" name="telefono" class="border-gray-200 bg-white text-gray-700 mt-1 w-full rounded-md text-sm shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Dirección</label>
                    <input required type="text" name="direccion" class="border-gray-200 bg-white text-gray-700 mt-1 w-full rounded-md text-sm shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Imagen</label>
                    <input required type="file" name="fileimagen" class="file-input w-full" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Email</label>
                    <input required type="email" name="correo" class="border-gray-200 bg-white text-gray-700 mt-1 w-full rounded-md text-sm shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="text-gray-700 block text-sm font-bold">Contraseña</label>
                    <input required type="password" name="contrasenya" class="border-gray-200 bg-white text-gray-700 mt-1 w-full rounded-md text-sm shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6">
                    <button class="btn btn-primary w-full font-medium">
                        Crear restaurante
                    </button>
                </div>
            </form>
        </div>
    </div>
}
