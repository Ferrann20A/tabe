@model List<CategoriaRestaurante>

@using (Html.BeginForm("_CreateRestaurante", "PanelAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="py-6 px-8">
        <div class="grid grid-cols-6 gap-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idrestaurante" value="0" />
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Nombre</label>
                    <input required type="text" name="nombre" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Categoría</label>
                    <select name="categoriarestaurante"
                            class="p-2 pb-1.5 mt-1.5 w-full rounded-lg border-gray-300 text-gray-700 sm:text-sm shadow-sm focus:ring focus:outline-none">
                        @foreach (CategoriaRestaurante categ in Model)
                        {
                            <option value="@categ.IdCategoriaRestaurante">@categ.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-span-6">
                    <label class="block text-sm font-bold text-gray-700">Teléfono</label>
                    <input required type="tel" maxlength="9" name="telefono" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Dirección</label>
                    <input required type="text" name="direccion" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Imagen</label>
                    <input required type="file" name="fileimagen" class="file-input w-full" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Email</label>
                    <input required type="email" name="correo" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Contraseña</label>
                    <input required type="password" name="contrasenya" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6">
                    <button class="btn btn-primary font-medium w-full">
                        Crear restaurante
                    </button>
                </div>
            </form>
        </div>
    </div>
}
