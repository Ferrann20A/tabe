@model Restaurante

@using (Html.BeginForm("_CreateProducto", "PanelRestaurante"))
{
    <div class="py-6 px-8">
        <div class="grid grid-cols-6 gap-6">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idproducto" value="0" />
                <input type="hidden" name="idrestaurante" value="@Model.IdRestaurante" />
                <div class="col-span-6">
                    <label class="block text-sm font-bold text-gray-700">Nombre</label>
                    <input type="text" name="nombre" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6">
                    <label class="block text-sm font-bold text-gray-700">Descripción</label>
                    <input type="text" name="descripcion" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Precio</label>
                    <input type="text" name="precio" pattern="^\d+(,\d{1,2})?$" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                    <label class="block text-sm font-bold text-gray-700">Imagen</label>
                    <input type="text" name="imagen" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                </div>
                <div class="col-span-6">
                    <button class="btn btn-primary font-medium w-full">
                        Crear producto
                    </button>
                </div>
            </form>
        </div>
    </div>
}
