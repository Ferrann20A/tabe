<div class="card image-full rounded-none h-[calc(100vh-4.22rem)]">
    <figure><img class="h-full w-full object-cover opacity-80" src="~/images/general/login.png" /></figure>
    <div class="card-body">
        <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8 w-3/4">
            <div class="card bg-base-100 shadow-xl p-8 lg:w-1/2 mx-auto">
                <div class="mx-auto max-w-lg text-center">
                    <h1 class="text-2xl font-bold sm:text-3xl text-black">Iniciar sesión</h1>
                    <p class="mt-4 text-gray-500">
                        Tienes cosas por hacer. Nosotros te damos opciones
                    </p>
                </div>

                <form method="post" class="mx-auto mb-0 mt-8 w-full sm:w-2/3 lg:w-3/4 space-y-4">
                    <div class="w-full">
                        <label class="block text-sm font-bold text-gray-700">Email</label>
                        <input type="text" name="email" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                    </div>
                    <div class="w-full">
                        <label class="block text-sm font-bold text-gray-700">Contraseña</label>
                        <input type="password" name="password" class="mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm focus:ring focus:outline-none" />
                    </div>

                    <div class="flex flex-wrap items-center justify-between">
                        <p class="text-sm text-gray-500">
                            ¿No tienes cuenta?
                            <a asp-controller="Auth" asp-action="Register" class="text-gray-700 underline">Regístrate</a>
                        </p>
                        <button class="btn btn-primary font-medium">
                            Iniciar sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewData["MENSAJE"] != null)
{
    @section scripts {
        <script>errormodal.showModal()</script>
    }
}

<h2>@ViewData["MENSAJE"]</h2>

<dialog id="errormodal" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box">
        <h3 class="font-bold text-lg">Hello!</h3>
        <p class="py-4">Press ESC key or click the button below to close</p>
        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
</dialog>